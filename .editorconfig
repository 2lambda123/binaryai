# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml,toml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 8

[*.go]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{ts,tsx}]
indent_style = space
indent_size = 2

[*.bat]
indent_style = tab
end_of_line = crlf

[LICENSE]
insert_final_newline = false
